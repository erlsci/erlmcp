{application, memory_server,
 [{description, "MCP Memory Server - Knowledge Graph Example"},
  {vsn, "1.0.0"},
  {registered, [memory_server_sup, memory_server, memory_server_mcp]},
  {mod, {memory_server_app, []}},
  {applications, [
      kernel,
      stdlib,
      jsx,
      jesse,
      erlmcp
  ]},
  {env, [
      {memory_file_path, "memory.json"},
      {transport, stdio},
      {auto_save, true},
      {save_interval, 5000}
  ]},
  {modules, []},
  {licenses, ["MIT"]},
  {links, [{"GitHub", "https://github.com/banyan-platform/erlmcp"}]}
 ]}.