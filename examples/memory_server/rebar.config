{erl_opts, [debug_info, warnings_as_errors, warn_export_vars, warn_shadow_vars, warn_obsolete_guard]}.

{deps, [
    {erlmcp, "~>0.2"},
    {jsx, "3.1.0"},
    {jesse, "1.8.1"}
]}.

{erl_first_files, []}.

{shell, [
    {apps, [memory_server]}
]}.

{profiles, [
    {prod, [
        {erl_opts, [no_debug_info, warnings_as_errors]},
        {relx, [
            {release, {memory_server, "1.0.0"}, [memory_server]},
            {dev_mode, false},
            {include_erts, true},
            {include_src, false},
            {extended_start_script, true},
            {vm_args, "config/vm.args"},
            {sys_config, "config/sys.config"}
        ]}
    ]},
    {test, [
        {deps, [
            {proper, "1.4.0"}
        ]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{plugins, [
    rebar3_run
]}.

{alias, [
    {run, [compile, {run, "-c true"}]}
]}.

%% Configuration for escript generation if needed
{escript_main_app, memory_server}.
{escript_name, memory_server}.
{escript_incl_apps, [memory_server, erlmcp, jsx, jesse]}.
{escript_emu_args, "%%! +K true +A 1 +sbtu +sbtdb\n"}.
