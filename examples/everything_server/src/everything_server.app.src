{application, everything_server,
 [{description, "MCP Everything Server - Comprehensive Example"},
  {vsn, "1.0.0"},
  {registered, [everything_server_sup, everything_server]},
  {mod, {everything_server_app, []}},
  {applications, [
      kernel,
      stdlib,
      jsx,
      jesse,
      erlmcp
  ]},
  {env, [
      {port, 8080},
      {transport, stdio},
      {subscription_interval, 10000},
      {log_interval, 20000},
      {stderr_interval, 30000},
      {log_level, debug}
  ]},
  {modules, []},
  {licenses, ["MIT"]},
  {links, [{"GitHub", "https://github.com/banyan-platform/erlmcp"}]}
 ]}.
